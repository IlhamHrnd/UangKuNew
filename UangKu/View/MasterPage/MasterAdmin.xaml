<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:Menu="clr-namespace:UangKu.View.Menu"
       xmlns:Model="clr-namespace:UangKu.Model.Master"
       x:Class="UangKu.View.MasterPage.MasterAdmin"
       Style="{StaticResource Shell}">
    <Shell.BindingContext>
        <Model:Master/>
    </Shell.BindingContext>
    <FlyoutItem Title="Home Page"
                Icon="dotnet_bot.svg">
        <ShellContent ContentTemplate="{DataTemplate Menu:HomePage}"
                      Route="HomePage"/>
    </FlyoutItem>
    <FlyoutItem Title="App Standard Reference"
                Icon="dotnet_bot.svg">
        <ShellContent ContentTemplate="{DataTemplate Menu:AppStandardReference}"
                      Route="AppStandardReference"/>
    </FlyoutItem>
</Shell>